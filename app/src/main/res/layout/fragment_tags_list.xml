<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.tags.TagsListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacing_compact">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tags_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/play_selected_tags_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/spacing_compact"
            android:visibility="gone"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_play"
            android:tint="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/search_tag_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/spacing_regular"
            android:inputType="text"
            android:maxLength="20"
            android:hint="@string/search_tag_hint"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/search_tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_search"
            style="@style/searchFieldContextButton"
            android:visibility="visible"
            android:contentDescription="@string/tag_search"/>

        <ImageButton
            android:id="@+id/clear_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_clear"
            style="@style/searchFieldContextButton"
            android:contentDescription="@string/clear_text"/>

        <ImageButton
            android:id="@+id/add_tag_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_add"
            style="@style/searchFieldContextButton"
            android:contentDescription="@string/tag_add"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:focusableInTouchMode="true"
    tools:context=".ui.songs.SongDetailActivity">

    <LinearLayout
        android:id="@+id/song_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_comfort"
            android:textColor="@color/white"
            android:background="@color/gray_dark"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/song_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_comfort"
            app:srcCompat="@drawable/ic_delete"
            android:tint="@color/white"
            android:background="@color/colorAccent"
            android:visibility="gone"
            android:contentDescription="@string/song_delete" />
    </LinearLayout>

    <!--
    <EditText
        android:id="@+id/tag_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_regular"
        android:textColor="@color/white_highlight"
        android:textStyle="italic"
        android:background="@color/gray"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:enabled="false"
        android:hint="@string/tag_description_hint"
        android:textSize="14sp"
        android:layout_below="@id/song_header"
        tools:ignore="LabelFor" />
        -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tags_compact_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/song_header"
        android:padding="@dimen/spacing_compact"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_save_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_edit"
        android:tint="@color/white"
        android:layout_margin="@dimen/spacing_comfort"/>
</RelativeLayout>

<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="AppThemeTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="tabLayout">
        <item name="tabBackground">@drawable/bg_tabs</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/tabLayout.textAppearance</item>
    </style>

    <style name="tabLayout.textAppearance" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textColor">@color/white_highlight</item>
    </style>

    <style name="musicControlButtonBase">
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="musicControlButtonSmall" parent="musicControlButtonBase">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingTop">@dimen/spacing_comfort</item>
        <item name="android:paddingBottom">@dimen/spacing_comfort</item>
        <item name="android:paddingStart">@dimen/spacing_compact</item>
        <item name="android:paddingEnd">@dimen/spacing_compact</item>
    </style>

    <style name="musicControlButtonLarge" parent="musicControlButtonBase">
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:padding">@dimen/border_width</item>
    </style>
    
    <style name="pageHeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_comfort</item>
    </style>

    <style name="fab">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/spacing_comfort</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="searchFieldContextButton">
        <item name="android:paddingTop">@dimen/spacing_regular</item>
        <item name="android:paddingBottom">@dimen/spacing_regular</item>
        <item name="android:paddingRight">@dimen/spacing_regular</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/white_highlight</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="largeProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_progress_bar</item>
        <item name="android:minHeight">@dimen/border_width</item>
        <item name="android:maxHeight">@dimen/border_width</item>
    </style>
</resources>
